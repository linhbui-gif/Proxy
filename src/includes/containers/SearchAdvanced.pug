            +Input({ placeholder: 'Nhập từ khóa', size: 'small-middle' })
          .SearchAdvanced-item-col
            +Button({ title: 'Tìm kiếm', size: 'small-middle', iconImage: './assets/icons/icon-search-document-white.svg' })

      form(action="#").tab-main
        .SearchAdvanced-item-row.flex.items-center.flex-wrap.line-bottom
          .SearchAdvanced-item-col
            +Select({ placeholder: 'Mục lục thư viện', styleType: 'white', size: 'small-middle' })
          .SearchAdvanced-item-col
            +Select({ placeholder: 'Loại tài liệu', styleType: 'white', size: 'small-middle' })
          .SearchAdvanced-item-col
            +Checkbox({ label: 'Tìm không dấu' })

