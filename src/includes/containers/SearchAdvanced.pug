      .CardWithTab-header-item.tab-item NÂNG CAO

    .CardWithTab-body.padding
      form(action="#").tab-main
        .SearchAdvanced-item-row.flex.items-center.flex-wrap.justify-between
          .SearchAdvanced-item-col.border
            +Select({ placeholder: 'Chọn...', styleType: 'gray', size: 'small-middle' })
